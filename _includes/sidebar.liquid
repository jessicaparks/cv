<aside class="mt-4 mb-4">
  <div class="flex flex-col h-full space-y-4">
    <div class="mb-4">
      <h3 class="text-base font-bold text-gray-700 mb-2 flex items-center">
        <i class="fas fa-graduation-cap text-teal-600 mr-2"></i>
        Education
      </h3>
      <ul class="space-y-2">
      {% for educ in education %}
        <li>
          <div class="font-semibold text-sm text-gray-900">
            {{ educ.degree }}
          </div>
          <div class="text-sm text-gray-700">
            {{ educ.field }}
          </div>
          <div class="text-gray-600 text-sm">
            {{ educ.institute }}
          </div>
          <div class="text-gray-500 text-xs font-mono mt-1">
            {{ educ.begin }}&mdash;{{ educ.end }}
          </div>
        </li>
      {% endfor %}
      </ul>
    </div>
    <div class="mb-4">
      <h3 class="text-base font-bold text-gray-700 mb-2 flex items-center">
        <i class="fas fa-certificate text-teal-600 mr-2"></i>
        Certifications
      </h3>
      <ul class="space-y-1">
      {% for cert in certifications %}
        <li>
          <a {% if cert.link %}href="{{ cert.link }}" class="text-gray-700"{% endif %}>
            <i class="{{ cert.icon }} text-teal-600 mr-2"></i>{{ cert.label }}
          </a>
        </li>
      {% endfor %}
      </ul>
    </div>
    <div class="mb-4">
      <h3 class="text-base font-bold text-gray-700 mb-2 flex items-center">
        <i class="fas fa-code text-teal-600 mr-2"></i>
        Technical Skills
      </h3>
      <div class="flex flex-wrap">
      {% for tech in technologies %}
        <span class="skill-tag">{{ tech.label }}</span>
      {% endfor %}
      </div>
    </div>

    <div class="mb-4">
      <h3 class="text-base font-bold text-gray-700 mb-2 flex items-center">
        <i class="fas fa-envelope text-teal-600 mr-2"></i>
        Contact
      </h3>
      <ul class="space-y-1">
      {% for contact in contacts %}
        <li>
          <a {% if contact.contact %}href="{{ contact.contact }}" class="text-gray-700"{% endif %}>
            <i class="{{ contact.icon }} text-teal-600 mr-2"></i>{{ contact.label }}
          </a>
        </li>
      {% endfor %}
      </ul>
    </div>
  </div>
</aside>
